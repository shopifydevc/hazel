{
	"$schema": "https://turborepo.com/schema.json",
	"globalEnv": [
		"PORT",
		"LISTEN_PORT",
		"LISTEN_HOST",
		"DATABASE_URL",
		"CLUSTER_URL",
		"EFFECT_DATABASE_URL",
		"WORKOS_API_KEY",
		"WORKOS_WEBHOOK_SECRET",
		"WORKOS_CLIENT_ID",
		"WORKOS_COOKIE_PASSWORD",
		"WORKOS_REDIRECT_URI",
		"WORKOS_COOKIE_DOMAIN",
		"S3_BUCKET",
		"S3_ENDPOINT",
		"S3_ACCESS_KEY_ID",
		"S3_SECRET_ACCESS_KEY",
		"ELECTRIC_URL",
		"ELECTRIC_SOURCE_SECRET",
		"ELECTRIC_SOURCE_ID",
		"ALLOWED_ORIGIN",
		"INTEGRATION_ENCRYPTION_KEY",
		"INTEGRATION_ENCRYPTION_KEY_VERSION",
		"LINEAR_CLIENT_ID",
		"LINEAR_CLIENT_SECRET",
		"API_BASE_URL",
		"FRONTEND_URL",
		"REDIS_URL",
		"GITHUB_APP_ID",
		"GITHUB_APP_PRIVATE_KEY",
		"GITHUB_APP_SLUG",
		"GITHUB_WEBHOOK_SECRET",
		"OTEL_ENVIRONMENT",
		"SIGNOZ_INGESTION_KEY",
		"RAILWAY_COMMIT_SHA"
	],
	"ui": "tui",
	"tasks": {
		"build": {
			"outputs": ["dist/**"]
		},
		"typecheck": {
			"dependsOn": ["^typecheck"]
		},
		"setup": {
			"cache": false,
			"dependsOn": ["^setup"]
		},
		"db:push": {
			"cache": false
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"start": {
			"persistent": true,
			"cache": false
		}
	}
}
