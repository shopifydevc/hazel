{
	"$schema": "https://turborepo.com/schema.json",
	"globalEnv": [
		"PORT",
		"DATABASE_URL",
		"WORKOS_API_KEY",
		"WORKOS_WEBHOOK_SECRET",
		"WORKOS_CLIENT_ID",
		"WORKOS_COOKIE_PASSWORD",
		"WORKOS_REDIRECT_URI",
		"WORKOS_COOKIE_DOMAIN",
		"R2_BUCKET_NAME",
		"R2_ENDPOINT",
		"R2_ACCESS_KEY_ID",
		"R2_SECRET_ACCESS_KEY",
		"ELECTRIC_URL",
		"ELECTRIC_SECRET",
		"ELECTRIC_SOURCE_ID"
	],
	"tasks": {
		"build": {
			"outputs": [
				"dist/**"
			]
		},
		"typecheck": {
			"dependsOn": [
				"^typecheck"
			]
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"start": {
			"persistent": true,
			"cache": false
		}
	}
}