{
	"name": "hazel-chat",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*",
			"experimental/*",
			"libs/*",
			"bots/*"
		],
		"catalogs": {
			"effect": {
				"effect": "3.19.15",
				"@effect/platform": "0.94.2",
				"@effect/platform-bun": "0.87.1",
				"@effect/platform-browser": "0.74.0",
				"@effect/platform-node": "0.104.1",
				"@effect/rpc": "0.73.0",
				"@effect/experimental": "0.58.0",
				"@effect/language-service": "^0.64.1",
				"@effect/sql": "0.49.0",
				"@effect/sql-pg": "0.50.1",
				"@effect/cluster": "0.56.1",
				"@effect/opentelemetry": "0.61.0",
				"@effect/workflow": "0.16.0",
				"@effect-atom/atom": "0.4.13",
				"@effect-atom/atom-react": "0.4.6",
				"@effect/ai": "0.33.2",
				"@effect/ai-openrouter": "0.8.1",
				"@effect/cli": "0.73.1",
				"@effect/printer": "0.47.0",
				"@effect/printer-ansi": "0.47.0"
			}
		}
	},
	"scripts": {
		"dev:withBots": "turbo dev",
		"dev": "turbo run dev --filter=* --filter=!*bot*",
		"dev:bots": "turbo run dev --filter=*bot*",
		"build": "turbo build typecheck",
		"start": "turbo start",
		"setup": "bun run packages/setup/src/index.ts",
		"setup:turbo": "turbo setup",
		"typecheck": "turbo build typecheck",
		"format": "oxfmt",
		"lint": "oxlint",
		"test": "vitest",
		"test:once": "vitest run",
		"test:debug": "vitest --inspect-brk --no-file-parallelism",
		"test:coverage": "vitest run --coverage --coverage.reporter=text"
	},
	"dependencies": {
		"@durable-streams/client-effect": "https://pkg.pr.new/durable-streams/durable-streams/@durable-streams/client-effect@218"
	},
	"devDependencies": {
		"@effect/vitest": "^0.27.0",
		"@vitest/coverage-v8": "^4.0.18",
		"oxfmt": "^0.27.0",
		"oxlint": "^1.42.0",
		"rollup-plugin-visualizer": "6.0.5",
		"turbo": "^2.8.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18",
		"wrangler": "^4.61.1"
	},
	"engines": {
		"bun": ">=1.2.14"
	},
	"packageManager": "bun@1.3.8",
	"trustedDependencies": []
}
