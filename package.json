{
	"name": "maki-chat",
	"private": true,
	"packageManager": "bun@1.2.19",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		]
	},
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build typecheck",
		"start": "turbo start",
		"typecheck": "turbo build typecheck",
		"format:fix": "biome check --write --unsafe",
		"test": "vitest",
		"test:once": "vitest run",
		"test:debug": "vitest --inspect-brk --no-file-parallelism",
		"test:coverage": "vitest run --coverage --coverage.reporter=text"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@vitest/coverage-v8": "3.2.4",
		"turbo": "^2.5.6",
		"typescript": "^5.9.2"
	},
	"trustedDependencies": [],
	"dependencies": {
		"vitest": "^3.2.4"
	}
}