{
	"name": "@hazel/backend",
	"private": true,
	"type": "module",
	"module": "src/index.ts",
	"exports": {
		".": "./src/index.ts",
		"./api": "./src/api.ts",
		"./rpc/groups/*": "./src/rpc/groups/*.ts"
	},
	"scripts": {
		"dev": "bun run --watch src/index.ts",
		"start": "bun run src/index.ts",
		"typecheck": "tsc --noEmit",
		"test": "vitest run src/**/*.test.ts",
		"test:sync": "vitest run src/services/chat-sync/*.test.ts src/services/chat-sync/*.integration.test.ts src/routes/webhooks.http.test.ts --exclude src/services/chat-sync/*.e2e.test.ts",
		"test:watch": "vitest src/**/*.test.ts",
		"test:policies": "vitest run src/lib/policy-utils.test.ts src/policies/*.test.ts",
		"setup": "bun run scripts/setup.ts",
		"sync:workos": "bun run src/scripts/sync-workos.ts",
		"reset": "bun run scripts/reset-all.ts",
		"reset:dry-run": "bun run scripts/reset-all.ts --dry-run",
		"reset:force": "bun run scripts/reset-all.ts --force",
		"rebuild-channel-access": "bun run scripts/rebuild-channel-access.ts"
	},
	"dependencies": {
		"@effect/cluster": "catalog:effect",
		"@effect/experimental": "catalog:effect",
		"@effect/opentelemetry": "catalog:effect",
		"@effect/platform": "catalog:effect",
		"@effect/platform-bun": "catalog:effect",
		"@effect/platform-node": "catalog:effect",
		"@effect/rpc": "catalog:effect",
		"@effect/sql": "catalog:effect",
		"@effect/sql-pg": "catalog:effect",
		"@hazel/auth": "workspace:*",
		"@hazel/backend-core": "workspace:*",
		"@hazel/db": "workspace:*",
		"@hazel/domain": "workspace:*",
		"@hazel/effect-bun": "workspace:*",
		"@hazel/integrations": "workspace:*",
		"@hazel/schema": "workspace:*",
		"@workos-inc/node": "^7.77.0",
		"drizzle-orm": "^0.45.1",
		"dfx": "^0.127.0",
		"effect": "catalog:effect",
		"jose": "^6.1.3",
		"pg": "^8.16.3"
	},
	"devDependencies": {
		"@testcontainers/postgresql": "^10.18.0",
		"@effect/language-service": "catalog:effect",
		"@types/bun": "1.3.8",
		"drizzle-kit": "^0.31.8",
		"typescript": "^5.9.3"
	}
}
