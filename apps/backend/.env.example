# Database Configuration
# Local Docker PostgreSQL (recommended for development)
DATABASE_URL=postgresql://user:password@localhost:5432/app

# For production/remote database, use:
# DATABASE_URL=postgresql://user:password@your-db-host:6432/postgres?sslmode=verify-full

# Cluster Service URL
# Local cluster service (Docker)
CLUSTER_URL=http://localhost:3020

# WorkOS Authentication
# Get these from: https://dashboard.workos.com/
WORKOS_API_KEY=sk_test_your_workos_api_key_here
WORKOS_WEBHOOK_SECRET=your_webhook_secret_here
WORKOS_CLIENT_ID=client_your_client_id_here
WORKOS_REDIRECT_URI=http://localhost:3003/auth/callback
WORKOS_COOKIE_PASSWORD=generate_a_32_character_random_string
WORKOS_COOKIE_DOMAIN=localhost

# Cloudflare R2 Storage
# Get these from Cloudflare R2 dashboard
R2_BUCKET_NAME=your-bucket-name
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key

# Electric SQL Configuration
# Local Electric (Docker)
ELECTRIC_URL=http://localhost:5133

# For Electric Cloud (production), use:
# ELECTRIC_URL=https://api.electric-sql.cloud
# ELECTRIC_SECRET=your_electric_jwt_token
# ELECTRIC_SOURCE_ID=your_source_id