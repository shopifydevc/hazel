{
	"$schema": "https://ui.shadcn.com/schema.json",
	"style": "new-york",
	"rsc": false,
	"tsx": true,
	"tailwind": {
		"config": "",
		"css": "src/styles/styles.css",
		"baseColor": "zinc",
		"cssVariables": true,
		"prefix": ""
	},
	"aliases": {
		"components": "~/components",
		"utils": "~/lib/utils",
		"ui": "~/components/ui",
		"lib": "~/lib",
		"hooks": "~/hooks"
	},
	"iconLibrary": "@heroicons/react",
	"registries": {
		"@intentui": "https://intentui.com/r/{name}",
		"@irsyadadl": {
			"url": "https://design.intentui.com/r/{name}",
			"headers": {
				"Authorization": "Bearer ${REGISTRY_TOKEN}"
			}
		}
	}
}
