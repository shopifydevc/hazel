{
	"$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["**/*.js"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off",
				"useImportType": "error"
			},
			"complexity": {
				"useArrowFunction": "error",
				"noBannedTypes": "warn"
			},
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useFocusableInteractive": "off",
				"useSemanticElements": "off"
			},
			"correctness": {
				"useHookAtTopLevel": "off",
				"noUnusedImports": "off",
				"noChildrenProp": "off",
				"useJsxKeyInIterable": "off",
				"useYield": "off"
			},
			"suspicious": {
				"noConfusingVoidType": "off",
				"noExplicitAny": "off",
				"noArrayIndexKey": "off",
				"noConsoleLog": "off",
				"noShadowRestrictedNames": "off"
			},
			"nursery": {
				"useSortedClasses": "error"
			}
		},
		"ignore": ["node_modules", ".next", "dist"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 110,
		"ignore": ["node_modules", ".next", "dist"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"arrowParentheses": "always",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"semicolons": "asNeeded",
			"trailingCommas": "all"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	}
}
