{
	"$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"files": {
		"includes": [
			"apps/**/*.{ts,tsx}",
			"packages/**/*.{ts,tsx}"
		],
		"experimentalScannerIgnores": [
			".context/**",
			"node_modules/**",
			".turbo/**"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off",
				"useImportType": "error"
			},
			"complexity": {
				"useArrowFunction": "error",
				"noBannedTypes": "warn"
			},
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useFocusableInteractive": "off",
				"useSemanticElements": "off"
			},
			"correctness": {
				"useUniqueElementIds": "off",
				"useHookAtTopLevel": "off",
				"noUnusedImports": "off",
				"noChildrenProp": "off",
				"useJsxKeyInIterable": "off",
				"useYield": "off"
			},
			"suspicious": {
				"noReactSpecificProps": "off",
				"noConfusingVoidType": "off",
				"noExplicitAny": "off",
				"noArrayIndexKey": "off",
				"noShadowRestrictedNames": "off"
			},
			"nursery": {
				"useSortedClasses": "error"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 110
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"arrowParentheses": "always",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"semicolons": "asNeeded",
			"trailingCommas": "all"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	}
}